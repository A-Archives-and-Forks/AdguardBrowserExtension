.tooltip {
    white-space: nowrap;
    visibility: hidden;
    opacity: 0;
    padding: 8px 16px;
    color: var(--text-main-text-main-default);
    background-color: var(--fills-menus-dropdown-menu-background-default);
    font-size: 14px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.25);
    border-radius: 4px;

    &--on {
        visibility: visible;
        opacity: 1;
    }

    &--off {
        visibility: hidden;
        opacity: 0;
    }
}
